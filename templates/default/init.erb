    else
        echo "$PROJECT_NAME is not running ..."
    fi
}

restart(){
	echo "Restarting: $PROJECT_NAME"
	${0} stop
	${0} start
}

status(){
    echo "Status: $PROJECT_NAME"
    if [ -f $PIDFILE ]
    then
        echo "$PIDFILE exists, process is already running or crashed\n"
    else
        echo "$PROJECT_NAME is not running ..."
    fi
}

case $1 in
    "start") start;;

    "stop") stop;;

    "restart") restart;;

    "status") status;;

    *) usage;;

esac